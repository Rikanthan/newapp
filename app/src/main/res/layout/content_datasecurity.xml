<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbac"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".datasecurity"
    tools:showIn="@layout/activity_datasecurity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="vertical"></LinearLayout>

    <Button
        android:id="@+id/button44"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="ceasar"
        android:text="ceasar cipher"
        android:textColor="#F5F4F0"
        android:background="@drawable/button3"/>

    <Button
        android:id="@+id/button45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="playfair"
        android:text="playfair"
        android:textColor="#F5F4F0"
        android:background="@drawable/button3"/>

    <Button
        android:id="@+id/button46"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="key"
        android:text="key"
        android:textColor="#F5F4F0"
        android:background="@drawable/button3"/>

    <Button
        android:id="@+id/button47"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="hill"
        android:text="hill cipher"
        android:textColor="#F5F4F0"
        android:background="@drawable/button3"/>

    <Button
        android:id="@+id/button48"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="rail"
        android:text="Railfence"
        android:textColor="#F5F4F0"
        android:background="@drawable/button3"
        />
</LinearLayout>